@model OnlineStore.Models.Product.ModelForShoppingCartDetails

@{
    
    ViewBag.Title = "Shopping cart";
}

<h2>Your shopping cart @Model.product.Name </h2>

<div>
    <h4>ShoppingCart</h4>
    <hr />
    <table class="table">
        <tr>
            <th style="color:#e2d3aa">
                @Html.DisplayNameFor(model => model.product.ImgURL)
            </th>
            <th style="color:#e2d3aa">
                @Html.DisplayNameFor(model => model.product.Quantity)
            </th>
            <th style="color:#e2d3aa">
                @Html.DisplayNameFor(model => model.product.Price)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.ShoppingCart.ChoosedProducts)
        {
            <tr style="background-color:#e2d3aa">
                <td style="max-width:300px">
                    <div class="col-md-4 text-center">
                        <div class="thumbnail">
                            <img class="img-responsive" src="@item.ImgURL">
                            <div class="caption">
                                <h3>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </h3>
                            </div>
                        </div>
                    </div>
                </td>
                <td style="color:white">
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td style="color:white">
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td style="color:white">
                    @Html.ActionLink("Details", "Details", "Products", new { id = item.Id }, new { @style = "color:white;" }) |
                    @Html.ActionLink("Remove", "Delete", new { id = item.Id }, new { @style = "color:white;" })
                </td>
            </tr>
        }

    </table>

    @Html.ActionLink("Pay", "Pay", "Payment", new { id = Model.ShoppingCart.ID }, new { @style = "color:white;" })

